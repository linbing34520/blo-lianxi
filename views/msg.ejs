<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css"
        integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <title>sigin</title>
    <style>
        #logo>a {
            display: block;
            color: #4fc08d;
            font-size: 28px;
            font-weight: bold;
        }

        .marg {
            margin-top: 4%;
        }

        .title {
            color: #999;
            font-size: 14px;
            line-height: 26px;
        }

        .nav-setting {
            position: fixed;
            right: 30px;
            top: 35px;
            z-index: 999;
        }

        .menu {
            width: 100%;
            height: 116px;
            text-align: center;
            line-height: 40px;
            box-shadow: 0px 0px 6px #999;
            border-radius: 4px;
        }

        .menu a {
            display: block;
            color: #333;
        }

        .menu a:hover {
            background: #eee;
        }

        .meunicon ul li {
            width: 20px;
            height: 3px;
            margin-top: 10%;
            list-style: none;
            background: #333333;
            border-radius: 6px;
        }

        .mainform {
            box-shadow: 0px 0px 4px #999;
            margin-top: 6%;
            border-radius: 4px;
            padding: 2%;
        }

        .mainform h5 {
            font-weight: bold;

        }

        .storyy {
            box-shadow: 0px 0px 6px #999;
        }

        #login {
            background: #4fc08d;
            color: #fff;
        }

        .pic {
            width: 50px;
            height: 30px;
            line-height: 60px;
            border-radius: 40px;
            color: #fff;
        }


        .inf {
            height: 40px;
            width: 100%;
            white-space: nowrap;
            overflow-x: scroll;
        }

        .mainsto a {
            color: #4fc08d;
            font-weight: bold;
            line-height: 30px;
        }

        .bootom span {
            color: #999;
            font-size: 14px;
        }

        .mart {
            margin-top: 2%;
        }

        .bootom button {
            background: #4fc08d;
            outline: none;
            border: 0;
            color: #fff;
            width: 60px;
            height: 28px;
            border-radius: 4px;
            margin: 2% 0;
        }

        .liuyan h4 {

            line-height: 32px;
            color: #4fc08d;
        }
    </style>
</head>

<body>
    <div class="container marg">
            <%- include('head.ejs') %>

        <div class="story col-md-8 col-md-offset-2">
            <div class="pic col-md-1">
                <img src="http://hbimg.huabanimg.com/b4fe1f539e3f94adbe814445c1455250a88943ba6ecb-7h6VZg_fw658" alt=""
                    width="60px">
            </div>
            <div class="content col-md-9 col-md-offset-1">
                <div class="mainsto">
                    <form class="form-horizontal" method="post" action='/msg/save'>
                        <h4><a>标题</a></h4>
                        <div class="form-group">
                            <div class="col-sm-12">
                                <input type="text" name="title" class="form-control">
                            </div>
                        </div>

                        <div class="content col-md-9">
                            <div class="liuyan">
                                <h4>内容</h4>
                            </div>
                            <div class="bootom col-md-12">
                                <div>
                                    <textarea name="context" id="" cols="64" rows="8"></textarea>
                                </div>
                                <button>发布</button>
                            </div>
                        </div>
                    </form>
                </div>


            </div>





        </div>


    </div>
    <script>
        var menu = document.getElementsByClassName('menu')[0];
        var meunicon = document.getElementsByClassName('meunicon')[0];
        var mask = true;
        meunicon.onclick = function () {
            if (mask) {
                menu.style.display = 'block';
                mask = false;
            } else {
                menu.style.display = 'none';
                mask = true
            }
        }

    </script>

</body>

</html>