<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css"
        integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <title>sigin</title>
    <style>
        #logo>a {
            display: block;
            color: #4fc08d;
            font-size: 28px;
            font-weight: bold;
        }

        .marg {
            margin-top: 4%;
        }

        .title {
            color: #999;
            font-size: 14px;
            line-height: 26px;
        }

        .nav-setting {
            position: fixed;
            right: 30px;
            top: 35px;
            z-index: 999;
        }

        .menu {
            width: 100%;
            height: 116px;
            text-align: center;
            line-height: 40px;
            box-shadow: 0px 0px 6px #999;
            border-radius: 4px;
        }

        .menu a {
            display: block;
            color: #333;
        }

        .menu a:hover {
            background: #eee;
        }

        .meunicon ul li {
            width: 20px;
            height: 3px;
            margin-top: 10%;
            list-style: none;
            background: #333333;
            border-radius: 6px;
        }
        .mainform{
            box-shadow: 0px 0px 4px #999;
            margin-top: 6%;
            border-radius: 4px;
            padding: 2%;
        }
        .mainform h5{
            font-weight: bold;

        }
        #logup{
            background: #4fc08d;
            color: #fff;
        }
    </style>
</head>

<body>
    <div class="container marg">
            <%- include('head.ejs') %>
        <div class="mainform col-md-7 col-md-offset-3">
                <form class="form-horizontal" method="post" action='/reg/save' enctype="multipart/form-data">
                    <h5>用户名<span style="color: red;">*</span></h5>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <input type="text" id="username" class="form-control" value="" placeholder="用户名" name="username">
                        </div>
                    </div>
                    <h5>密码<span style="color: red;">*</span></h5>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <input type="password" value="" class="form-control" placeholder="密码" name="password">
                        </div>
                    </div>

                    <h5>重复密码<span style="color: red;">*</span></h5>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <input type="password" id="tpwd" value="" class="form-control" placeholder="重复密码" name="tpwd">
                        </div>
                    </div>

                    <h5>性别<span style="color: red;">*</span></h5>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <select name="sex" id="sexs" class="col-sm-12 form-control">
                                <option value="男" name="0">男</option>
                                <option value="女" name="1">女</option>
                                <option value="保密" name="2">保密</option>
                            </select>
                        </div>
                    </div>

                    <h5>头像<span style="color: red;">*</span></h5>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <input type="file" placeholder="请选择文件" name="avatar">
                        </div>
                    </div>

                    <h5>个人简介<span style="color: red;">*</span></h5>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <textarea name="intro" id="dest" value="" cols="84" rows="6"></textarea>
                        </div>
                    </div>

                    <h5></h5>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <input type="submit" id="logup" class="form-control" value="注册">
                        </div>
                    </div>
                </form>
    
            </div>

    </div>

    <div style="height: 330px;"></div>
    <script>
        var menu = document.getElementsByClassName('menu')[0];
        var meunicon = document.getElementsByClassName('meunicon')[0];
        var uname = document.getElementById('uname')
    //    if(uname.value == ''){
    //        return false;
    //    }
        
        var mask = true;
        meunicon.onclick = function () {
            if (mask) {
                menu.style.display = 'block';
                mask = false;
            } else {
                menu.style.display = 'none';
                mask = true
            }
        }
        
    </script>

</body>

</html>