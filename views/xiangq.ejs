<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css"
        integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <title>留言页</title>
    <style>
        #logo>a {
            display: block;
            color: #4fc08d;
            font-size: 28px;
            font-weight: bold;
        }

        .marg {
            margin-top: 4%;
        }

        .title {
            color: #999;
            font-size: 14px;
            line-height: 26px;
        }

        .nav-setting {
            position: fixed;
            right: 30px;
            top: 35px;
            z-index: 999;
        }

        .menu {
            width: 100%;
            height: 116px;
            text-align: center;
            line-height: 40px;
            box-shadow: 0px 0px 6px #999;
            border-radius: 4px;
        }

        li {
            list-style: none;
        }

        .menu a {
            display: block;
            color: #333;
        }

        .menu a:hover {
            background: #eee;
        }

        .meunicon ul li {
            width: 20px;
            height: 3px;
            margin-top: 10%;
            list-style: none;
            background: #333333;
            border-radius: 6px;
        }

        .content {
            box-shadow: 0px 0px 2px #999;
            border-radius: 4px;
            padding: 2%;
        }

        .pic {

            line-height: 60px;
            border-radius: 40px;
            color: #fff;
        }

        .inf {
            height: 40px;
            width: 100%;
            white-space: nowrap;

        }

        .mainsto a {
            color: #4fc08d;
            font-weight: bold;
            line-height: 30px;
        }

        .bootom span {
            color: #999;
            font-size: 14px;
        }

        .mart {
            margin-top: 2%;
        }

        .bootom button {
            background: #4fc08d;
            outline: none;
            border: 0;
            color: #fff;
            width: 60px;
            height: 28px;
            border-radius: 4px;
            margin: 2% 0;
        }

        .liuyan h4 {
            font-weight: bold;
            border-bottom: 1px rgb(187, 184, 184) solid;
            line-height: 32px;
        }
    </style>
</head>

<body>
    <div class="container marg">
        <%- include('head.ejs') %>
        <div class="story col-md-8 col-md-offset-2">
            <div class="pic col-md-1">
                <a href="">
                    <img src="/img/<%- article.avatar %>" alt="" width="60px">
                </a>
            </div>
            <div class="content col-md-9 col-md-offset-1">
                <div class="mainsto">
                    <h4><a><%- article.title %></a></h4>
                    <h5 class="inf"><%- article.context %></h5>
                </div>
                <div class="bootom col-md-12">
                    <div class="rightsto col-md-6"><span></span> </div>
                    <div class=" col-md-4 col-md-offset-2 text-right"><span>浏览(6)</span><span>留言(0)</span> </div>
                </div>
            </div>
        </div>
        


        <% if(user){ %>
            <div class="story mart col-md-8 col-md-offset-2">
                    <div class="content col-md-9 col-md-offset-2">
                        <div class="liuyan">
                            <h4>留言</h4>
                            <ul>
                                    <% for(var i=0;i<msg.length;i++){ %>
                                            <li class="mart"><img src="/img/<%- msg[0].avatar %>" alt="" name="avatar" width="40px"> <span><%- msg[i].context %></span></li>
                                        
                                            <% } %>
                                    
                                </ul>
                        </div>
                        <div class="bootom col-md-12">
        
                            <form method="post" action="/msg/savemsg">
                                <div>
                                    <textarea name="context" id="" cols="68" rows="8"></textarea>
                                </div>
                                <input type="submit" style="background: #4fc08d;outline: none;border: 0;color: #fff;"
                                    value="留言">
        
                                <input type="hidden" name="uid" value="<%- user.id %>">
                                <input type="hidden" name="aid" value="<%- article.id %>">
                            </form>
                        </div>
                    </div>
                </div>
        <% }else{ %>
            <div class="infoo col-md-8 col-md-offset-2">
                    <h4>留言</h4>
                <ul>
                    <% for(var i=0;i<msg.length;i++){ %>
                            <li class="mart"><img src="/img/<%- msg[0].avatar %>" alt="" name="avatar" width="40px"> <span><%- msg[i].context %></span></li>
                        
                            <% } %>
                    
                </ul>
            </div>
            <% } %>
    </div>

    <script>
        var menu = document.getElementsByClassName('menu')[0];
        var meunicon = document.getElementsByClassName('meunicon')[0];
        var mask = true;
        meunicon.onclick = function () {
            if (mask) {
                menu.style.display = 'block';
                mask = false;
            } else {
                menu.style.display = 'none';
                mask = true
            }
        }

    </script>

</body>

</html>